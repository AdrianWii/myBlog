                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <!-- /.row -->
            </div>

            <!-- Side Widget Well -->
            <div class="well">
                <!-- Carousel -->
                <div id="homeCarousel" class="carousel slide">

                    <!-- Items -->
                    <div class="carousel-inner">

                        <!-- Item 1 -->
                        <div class="item active">
                            <img class="thumbnail-cooperate" src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/ce/Coca-Cola_logo.svg/2000px-Coca-Cola_logo.svg.png"/>
                        </div>

                        <!-- Item 2 -->
                        <div class="item">
                            <img class="thumbnail-cooperate" src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/ca/Sony_logo.svg/2000px-Sony_logo.svg.png"/>
