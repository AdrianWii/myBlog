<!DOCTYPE html>
<html>
    <head>
        <!-- settings --> 
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Blog - Adrian Widłak{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap Core CSS -->
            <link href="{{ asset('bundles/blog/css/bootstrap.min.css') }}" rel="stylesheet">

            <!-- Bootstrap Core CSS -->
            <link href="{{ asset('bundles/blog/css/style.css') }}" rel="stylesheet">
            <!-- Custom Fonts -->
            <link href='http://fonts.googleapis.com/css?family=Mrs+Sheppards|Dosis:300,400,700|Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800;' rel='stylesheet' type='text/css'>

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/blog/img/icon.png') }}" />

    </head>
    <body>
        {% block navigation %}
            <div class="container">
                <div class="row">
                    


            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <p class="navbar-brand">Adrian Widłak</p>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('start_blog') }}">START</a></li>
                            <li><a href="#">COOPERATION</a></li>
                            <li><a href="#">CONTACT</a></li>

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.user %}
                            <li>
                                <a href="#">Hello {{ app.user }} </a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li>
                            <a href="{{ path('admin') }}" class="btn btn-default">Admin Panel</a>
                            </li>
                            {% endif %}
                            <li>
                            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default">Logout</a>
                            </li>
                        {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-defaultt">Login</a>
                            </li>
                        {% endif %}
                            

                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
                                    </div>
            </div>
        {% endblock %} 
        <!-- Page Content -->
        <div class="container body-container">

        {% block body %}{% endblock %}
    </div>
     <div class="container">
        {% block footer %}
            <footer>
                <div class="row">
                    <div class="col-xs-12 text-center main-foooter">
                      COPYRIGHT &copy; ADRIAN WIDŁAK
                    </div>

                </div>
                <!-- /.row -->
            </footer>
            </div>
        {% endblock %}


    {% block javascripts %}
        <!-- jQuery -->
        <script src="{{ asset('bundles/blog/js/jquery.js') }}"></script>
        <script src="{{ asset('bundles/blog/js/carousel.js') }}"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('bundles/blog/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</body>
</html>


